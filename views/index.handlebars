<h1>My crazy Burgers!</h1>



<h2>Burger Creations</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers In My Tummy</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add A New Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Whats your Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee"></label><br>
    <input type="radio" name="sleepy" value="1" checked> New Creations!<br>
    <input type="radio" name="sleepy" value="0"> In my Tummy
  </div>

  <button type="submit">Add Burger</button>
</form>
